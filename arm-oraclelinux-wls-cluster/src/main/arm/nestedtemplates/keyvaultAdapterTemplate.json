{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
            }
        },
        "certificateDataValue": {
            "type": "string",
            "metadata": {
                "description": "Certificate data to store in the secret"
            }
        },
        "certificatePasswordValue": {
            "type": "string",
            "metadata": {
                "description": "Certificate password to store in the secret"
            }
        },
        "enabledForTemplateDeployment": {
            "type": "bool",
            "metadata": {
                "description": "Property to specify whether Azure Resource Manager is permitted to retrieve secrets from the key vault."
            },
            "defaultValue": true
        },
        "identity": {
            "type": "object"
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "permission": {
            "type": "object",
            "defaultValue": {
                "certificates": [
                    "get",
                    "list",
                    "update",
                    "create"
                ]
            }
        },
        "secretNameforCertificateData": {
            "type": "string",
            "metadata": {
                "description": "Secret name of certificate data."
            },
            "defaultValue": "myAppGatewaySSLCertificate"
        },
        "secretNameforCertificatePassword": {
            "type": "string",
            "metadata": {
                "description": "Secret name of certificate password."
            },
            "defaultValue": "myAppGatewaySSLCertificatePassword"
        },
        "sku": {
            "type": "string",
            "metadata": {
                "description": "Price tier for Key Vault."
            },
            "defaultValue": "Standard"
        },
        "subjectName": {
            "type": "string"
        },
        "useExistingAppGatewaySSLCertificate": {
            "type": "bool",
            "defaultValue": false
        }
    },
    "variables": {
        "const_keyVaultName": "[concat('wls-kv-', uniqueString(resourceGroup().id, deployment().name))]",
        "name_kvWithExistingCertTemplateName": "keyvaultWithExistingCertTemplate.json",
        "name_kvWithNewCertTemplateName": "keyvaultWithNewCertTemplate.json"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "${azure.apiVersion}",
            "name": "${cluster.appgateway.keyvault.start}",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                    ]
                }
            }
        },
        {
            "apiVersion": "${azure.apiVersionForDeploymentScript}",
            "type": "Microsoft.Resources/deployments",
            "name": "keyVaultwithSelfSignedAppGatewaySSLCert",
            "condition": "[not(parameters('useExistingAppGatewaySSLCertificate'))]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/keyvault/', variables('name_kvWithNewCertTemplateName')))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "identity": {
                        "value": "[parameters('identity')]"
                    },
                    "keyvaultName": {
                        "value": "[variables('const_keyVaultName')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "permission": {
                        "value": "[parameters('permission')]"
                    },
                    "secretName": {
                        "value": "[parameters('secretNameforCertificateData')]"
                    },
                    "subjectName": {
                        "value": "[parameters('subjectName')]"
                    },
                    "sku": {
                        "value": "[parameters('sku')]"
                    }
                }
            }
        },
        {
            "apiVersion": "${azure.apiVersionForDeploymentScript}",
            "type": "Microsoft.Resources/deployments",
            "name": "keyVaultwithExistingAppGatewaySSLCert",
            "condition": "[parameters('useExistingAppGatewaySSLCertificate')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/keyvault/', variables('name_kvWithExistingCertTemplateName')))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "certificateDataName": {
                        "value": "[parameters('secretNameforCertificateData')]"
                    },
                    "certificateDataValue": {
                        "value": "[parameters('certificateDataValue')]"
                    },
                    "certificatePasswordName": {
                        "value": "[parameters('secretNameforCertificatePassword')]"
                    },
                    "certificatePasswordValue": {
                        "value": "[parameters('certificatePasswordValue')]"
                    },
                    "enabledForTemplateDeployment": {
                        "value": "[parameters('enabledForTemplateDeployment')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "name": {
                        "value": "[variables('const_keyVaultName')]"
                    },
                    "sku": {
                        "value": "[parameters('sku')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "${azure.apiVersion}",
            "name": "${cluster.appgateway.keyvault.end}",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                    ]
                }
            }
        }
    ],
    "outputs": {
        "_artifactsLocation": {
            "type": "string",
            "value": "[parameters('_artifactsLocation')]"
        },
        "keyVaultName": {
            "type": "string",
            "value": "[if(parameters('useExistingAppGatewaySSLCertificate'), reference('keyVaultwithExistingAppGatewaySSLCert', '${azure.apiVersion}').outputs.keyvaultName.value, reference('keyVaultwithSelfSignedAppGatewaySSLCert', '${azure.apiVersion}').outputs.keyvaultName.value)]"
        },
        "sslCertDataSecretName": {
            "type": "string",
            "value": "[if(parameters('useExistingAppGatewaySSLCertificate'), reference('keyVaultwithExistingAppGatewaySSLCert', '${azure.apiVersion}').outputs.sslCertDataSecretName.value, reference('keyVaultwithSelfSignedAppGatewaySSLCert', '${azure.apiVersion}').outputs.secretName.value)]"
        },
        "secretNameForCertPassword": {
            "type": "string",
            "value": "[if(parameters('useExistingAppGatewaySSLCertificate'), reference('keyVaultwithExistingAppGatewaySSLCert', '${azure.apiVersion}').outputs.secretNameForCertPassword.value, '')]"
        }
    }
}